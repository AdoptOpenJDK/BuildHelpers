	@#
	$(MKDIR) -p $(IMAGES_OUTPUTDIR)/lib
	$(CD) $(CLASSBINDIR) && \
	    $(BOOT_JAR_CMD) $(CREATE_JAR_OPTS_NOMANIFEST) $(IMAGES_OUTPUTDIR)/lib/tools.jar \
